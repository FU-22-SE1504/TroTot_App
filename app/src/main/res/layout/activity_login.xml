<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_Login_SignIn"
        android:layout_width="322.84dp"
        android:layout_height="50.51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="373dp"
        android:text="Sign Up" />

    <TextView
        android:id="@+id/btn_Login_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="258dp"
        android:layout_marginTop="481dp"
        android:text="Sign up"
        android:textColor="@color/primary" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="481dp"
        android:text="Already have Account" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="13dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="199dp"
        android:layout_marginTop="445dp"
        android:text="or" />

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/lato_regular"
        android:lineHeight="38.03dp"
        android:text="Login"
        android:textColor="@color/primary"
        android:textSize="31.69dp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="120dp" />

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="121dp"
        android:drawableStart="@drawable/ic_username"
        android:text="Username" />

    <EditText
        android:id="@+id/edt_Login_Username"
        android:layout_width="322.84dp"
        android:layout_height="49.51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="Input Username"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:text="" />

    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="100dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="226dp"
        android:drawableStart="@drawable/ic_password"
        android:text="Password" />

    <TextView
        android:id="@+id/txtForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="258dp"
        android:layout_marginTop="320dp"


        android:layout_marginBottom="67dp"
        android:text="Forgot Password" />

    <EditText
        android:id="@+id/edt_Login_Password"
        android:layout_width="322.84dp"
        android:layout_height="49.51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="257dp"
        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/ic_hidden"
        android:ems="10"
        android:hint="Input Password"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="" />


</RelativeLayout>